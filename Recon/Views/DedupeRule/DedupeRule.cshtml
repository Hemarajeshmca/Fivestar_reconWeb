            success: function (response1) {
                debugger;
                //var ComparisonCriteria = $("#ComparisonCriteria").data("kendoComboBox");
                $("#ComparisonCriteria").kendoAutoComplete({
                    dataTextField: "ComparisonCriteria",
                    dataValueField: "ComparisonCriteria",
                    filter: "contains",
