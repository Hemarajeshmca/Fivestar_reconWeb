            type: "POST",
            data: '{fieldtype: "' + fieldtype + '",process:"' + compsr + '"}',
            // url: "/DedupeRule/dedupExtraciondrop",
            url: '@Url.Action("dedupExtraciondrop", "DedupeRule")',
