@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;
@using Kendo.Mvc.Extensions;
@model  Recon_Model.CategoryViewModel
<style>
    
    div.k-window {
        display: inline-block;
        position: absolute;
        z-index: 10001;
        border-style: solid;
        border-width: 1px;
        padding-top: 1em;
        width: 38%;
        font-weight: normal;
    }

    .form-horizontal .form-group {
        margin-right: 25px;
        margin-left: -15px;
    }

    .k-edit-form-container {
        position: relative;
        width: 100%;
    }

    .k-window > div.k-popup-edit-form {
        padding: 1em 0;
        overflow: hidden;
    }
    
</style>

<div class="container">
    <div class="row" style="padding-left:26px;padding-right:10px">
        <div class="col-sm-6">
            <label for="" class="form-label">Remark&nbsp;</label>
            <input class="form-control" id="remark_desc" name="remark_desc" type="text" value="" data-bind="value:remark_desc">
        </div>
        <div class="col-sm-4">
            <label for="" class="form-label">Status&nbsp;</label>
            <div style="margin-left:2px;margin-top:5px">
                <input type="radio" id="Status" name="Status" value="Y" checked>&nbsp;Active &nbsp;
                <input type="radio" id="Status" name="Status" value="N" style="margin-left: 10px;">&nbsp;InActive&nbsp;
            </div>
        </div>
    </div>
</div>
