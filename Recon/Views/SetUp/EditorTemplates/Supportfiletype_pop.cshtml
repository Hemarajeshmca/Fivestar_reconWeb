@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;
@using Kendo.Mvc.Extensions;
@model  Recon_Model.CategoryViewModel
<style>    
    div.k-window {
        display: inline-block;
        position: absolute;
        z-index: 10001;
        border-style: solid;
        border-width: 1px;
        padding-top: 1em;
        width: 38%;
        font-weight: normal;
    }

    .form-horizontal .form-group {
        margin-right: 25px;
        margin-left: -15px;
    }

    .k-edit-form-container {
        position: relative;
        width: 100%;
    }

    .k-window > div.k-popup-edit-form {
        padding: 1em 0;
        overflow: hidden;
    }
    .form-control {            
            width: 100%;           
        }
      
</style>
<div class="container">
    <div class="row" style="padding-left:44px;padding-right:10px">
        <div class="col-sm-4">
            <label for="" class="form-label">Supporting File Type&nbsp;<span style="font-size: 12px;color: red;">*</span></label>
            <input class="form-control" id="tranbrkptype_name" name="tranbrkptype_name" type="text" value="" data-bind="value:tranbrkptype_name">
        </div>
        <div class="col-sm-4" style="margin-left:20px">
            <label for="" class="form-label">Status&nbsp;</label>
            <div style="margin-left:2px;margin-top:5px">
                <input type="radio" id="Status" name="Status" value="Y" checked>&nbsp;Active &nbsp;
                <input type="radio" id="Status" name="Status" value="N" >&nbsp;InActive&nbsp;
            </div>
        </div>
    </div>
</div>
