@using Kendo.Mvc.UI;
@using Kendo.Mvc.UI.Fluent;
@using Kendo.Mvc.Extensions;
@model Recon_Model.DedupeRule_model
<style>
    label {
        display: inline-block;
        max-width: 100%;
        margin-bottom: 5px;
    }

    div.k-window {
        display: inline-block;
        position: absolute;
        z-index: 10001;
        border-style: solid;
        border-width: 1px;
        padding-top: 1em;
        width: 30%;
        font-weight: normal;
    }

    .k-edit-form-container {
        position: relative;
        width: 100%;
    }

        .k-edit-form-container .k-edit-buttons {
            visibility: hidden !important;
        }

    .ui-autocomplete {
        z-index: 2147483647;
        max-height: 150px;
        overflow-x: hidden;
        padding-right: 20px;
    }

    li.ui-menu-item {
        font-size: 12px !important;
        /* font-family: Helvitica, serif; */
        font-weight: 600;
    }

        li.ui-menu-item:hover {
            font-size: 12px !important;
            /* font-family: Helvitica, serif; */
