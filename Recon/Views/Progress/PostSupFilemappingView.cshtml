        var getslno = $("#ReconName_id").val();
        if (getslno == "") {
            getslno = "0";
        }
        return { slno: getslno }
    }
   
    function editDetails(e) {
        debugger
        window_open();
    }
    function window_open() {
        debugger
        var table_name = "recon_trn_vtranbrkp"
        var grid = $("#processGrid").data("kendoGrid");
        var model = grid.dataItem($(event.target).closest("tr"));
        var filetype = "and file_gid = " + model.file_gid + " ";      
        var reportcondition = filetype  + " and excp_amount > 0 ";
        $.ajax({
            type: "POST",

            data: '{table_name: "' + table_name + '",condition:  "' + reportcondition + '" }',
            url: "/Report/ReportExpenceGrid_Read",
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (Data1) {
                $("#dialog").kendoWindow();
                var dialog = $("#dialog").data("kendoWindow");
                dialog.open().element.closest(".k-window").css({
                    top: 121,
                    left: 300, height: 400, width: 900
                });
                dialog.title("File Posting - Line Based");
                dialog.bind("open", window_open);
                debugger
                $("#exportExcel1").show();
                var columns = [];
                var chkval = JSON.parse(Data1);
                var arr = [];
                $.each(chkval, function (i, e) {
                    debugger;
                    $.each(e, function (key, val) {
                        arr.push(val);
                    });

                });
                if (arr == "No Records Found!" || arr == "Error in Data!") {
                    alert("No Records found..!");
                    return false;
                }


                var data = JSON.parse(Data1);
                // var data2 = JSON.parse(result.Data2);
                var i = 0;

                var entryIndex = "entries[" + i + "]";
                for (var key in data[0]) {

                    if (key == "Collection Center Name") {
                        columns.push({
                            field: entryIndex,
                            title: key,
                            // type: val
                            //footerTemplate: "Total",
                            attributes: { style: "text-align: left;" }
                        });
                    }
                    else {
                        if (key != "Collection Center Name")
                            columns.push({
                                field: entryIndex,
                                title: key,
                                // type: val


                            });

                    }
                    i = i + 1;
                    entryIndex = "entries[" + i + "]";
                }

                var rows = [];
                var data1 = JSON.parse(Data1);

                $.each(data1, function (i, e) {
                    var entryArray = [];
                    $.each(e, function (key, val) {

                        entryArray.push(val);
                    });
                    rows.push(kendo.observable({
                        entries: entryArray
                    }));

                });

                var viewModel = kendo.observable({
                    gridRows: rows
                });

                var configuration = {
                    //dataBound: onDataBound,
                    height: 350,
                    navigatable: true,
                    groupable: false,
                    editable: false,
                    sortable: true,
                    Scrollable: true,
                    filterable: false,
                    pagable: false,
                    resizable: false,
                    persistSelection: true,
                    selectable: "false",
                    columns: columns,
                    rows: viewModel,
                    excel: {
                        fileName: "Supporting File Mapping.xlsx",
                        filterable: true,
                        allPages: false
                    },
                };
                $("#example").remove();
                $('#Maingrid').append('<div id="example" style="position:relative" class="k-content"><table id="grid" data-bind="source: gridRows" style="position:relative;overflow:scroll;width:100%"></table></div>');
                var timeEditGrid = $("#grid").kendoGrid(configuration).data("kendoGrid");
                kendo.bind($("#grid"), viewModel);

                var grid = $("#grid").data("kendoGrid");
                for (var i = 0; i < grid.columns.length; i++) {
                    if (i != grid.columns.length) {
                        grid.autoFitColumn(i);  //autofit each column.
                    }
                }
            },
            error: function (result) {
                console.log(result);
            }
        });
    }
    function Mapdetails() {
        debugger;
       
        $.confirm({
            icon: 'fa fa-warning',
            title: 'Impact',          
            content: 'Are you sure to proceed ?',
            type: 'green',
            buttons: {
                confirm: function () {
                    debugger;
                    var grid = $("#processGrid").data("kendoGrid");
                    var model = grid._data[0];

                    var trangid = model.tran_gid;
                    var filegid = model.file_gid;
                    var progressmodel1 = { "tran_gid": trangid, "file_gid": filegid };
                    debugger;
                    $.ajax({
                        type: "POST",
                        dataType: "json",
                        data: JSON.stringify(progressmodel1),
                        url: '@Url.Action("SupFilemapping_create", "Progress")',
                        contentType: 'application/json; charset=utf-8',
                        success: function (Data1) {
                            debugger;

                            if (Data1[1] != "0") {
                                $.alert({
                                    icon: 'fa fa-success',
                                    title: 'Impact',
                                    content: Data1[0],
                                    type: 'green',
                                    animationSpeed: 700,
                                });
                            } else {
                                $.alert({
                                    icon: 'fa fa-warning',
                                    title: 'Impact',
                                    content: Data1[0],
                                    type: 'red',
                                    animationSpeed: 700,
                                });
                            }


                        },
                        error: function (result) {
                            alert("Error" + result);
                            console.log(result);
                            $.alert({
                                icon: 'fa fa-success',
                                title: 'Error',
                                content: result,
                                type: 'red',
                                animationSpeed: 700,
                            });
                        }
                    });
                    //var grid1 = $("#processGrid").data("kendoGrid");
                    //grid1.saveChanges();
                },
                cancel: function () {                   
                },
            }
        });
      
    }

    function call() {
        var grid = $("#processGrid").data("kendoGrid");
        var model = grid._data[0];
       
        var trangid = model.tran_gid;
        var filegid = model.file_gid;
        var ManualMatchoff = { "tran_gid": trangid, "file_gid": filegid };
        //ManualMatchoff.tran_gid = trangid;
        //ManualMatchoff.file_gid = filegid
        debugger;
        $.ajax({
            type: "POST",
            dataType: "json",
            //data:ManualMatchoff,
            data: JSON.stringify(ManualMatchoff),
            url: '@Url.Action("SupFilemapping_create", "Progress")',
            // url: "/Report/ReportExpenceGrid_Read",
            
            contentType: 'application/json; charset=utf-8',
            success: function (Data1) {
                debugger;

                if (Data1[1] != "0") {
                    $.alert({
                        icon: 'fa fa-success',
                        title: 'Impact',
                        content: Data1[0],
                        type: 'green',
                        animationSpeed: 700,
                    });
                } else {
                    $.alert({
                        icon: 'fa fa-warning',
                        title: 'Impact',
                        content: Data1[0],
                        type: 'red',
                        animationSpeed: 700,
                    });
                }


            },



            error: function (result) {
                alert("Error" + result);
                console.log(result);
                $.alert({
                    icon: 'fa fa-success',
                    title: 'Error',
                    content: result,
                    type: 'red',
                    animationSpeed: 700,
                });
            }
        });
    }
    function onRequestEnd(e) {
        debugger;      
        if (e.type == "create") {          
            if (e.response[1] > 0) {
                $.confirm({
                    title: 'Impact',
                    content: e.response[0],
                    type: 'green',
                    buttons: {
                        ok: function () {
                            location.href = "@Url.Action("", "Progress/PostSupFilemapping")"
                        }
                    }
                });
                //preventCloseOnSave = false;
                //$("#test").val(preventCloseOnSave);
              
               

            }
            else {
                $.alert({
                    title: 'Impact',
                    content: e.response[0],
                    type: 'green',
                });
                preventCloseOnSave = true;

            }
        }
        if (e.type == "update") {
            debugger;
            //check for errors in the response
            if (e.response[1] > 0) {
                $.dialog({
                    title: 'Impact',
                    content: e.response[0],
                    type: 'green',
                });
                //preventCloseOnSave = false;
                //$("#test").val(preventCloseOnSave);
                setTimeout(function () {
                    window.location.reload(1);
                }, 2000);

            }
            else {
                $.dialog({
                    title: 'Impact',
                    content: e.response[0],
                    type: 'green',
                });

                preventCloseOnSave = true;
                //$("#test").val(preventCloseOnSave);
            }
        }        
    }
