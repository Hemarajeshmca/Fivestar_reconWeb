<style>
    div.k-window {
        display: inline-block;
        position: absolute;
        z-index: 10001;
        border-style: solid;
        border-width: 1px;
        padding-top: 1em;
        width: 40%;
        font-weight: normal;
    }

    .form-horizontal .form-group {
        margin-right: 25px;
        margin-left: 15px;
    }

    .k-edit-form-container {
        position: relative;
        width: 100%;
    }
</style>
<form id="addconditoon" class="form-horizontal" data-role="validator" novalidate="novalidate">
    <div class="form-group">
        <label for="Reconname" class="col-sm-3">Sl.No</label>
        <input class="text-box single-line" id="Reconname" name="AccountNo" type="text" value="" data-bind="value:AccountNo">
    </div>
    <div class="form-group">
        <label for="Account1" class="col-sm-3">DB Alias Name</label>
        @(Html.Kendo().DropDownList()
                 .Name("code")
                 .DataTextField("Name")
                 .DataValueField("Code")
                 .HtmlAttributes(new { style = "height:25px;width: 158px;font-weight: normal" })
                 .DataSource(source => { source.Read(read => { read.Action("GetCmyRecordsdrop", "RuleDefinition"); }).ServerFiltering(true); }))
    </div>
    <div class="form-group">
        <label class="col-sm-3">Group Criteria</label>
        @(Html.Kendo().DropDownList()
                .Name("code3")
                .DataTextField("Name")
                .DataValueField("Code")
                .HtmlAttributes(new { style = "height:25px;width: 158px;font-weight: normal" })
                .Events(e => e.Change("Rule"))
                .DataSource(source => { source.Read(read => { read.Action("Getextracdrop", "RuleDefinition"); }).ServerFiltering(false); }))
        <input class="text-box single-line" id="Substring" name="" type="text" value="" placeholder="eg:Between(2,5)">
    </div>

    <div class="form-group">
        <label for="Account1" class="col-sm-3">Target Field</label>
        @(Html.Kendo().DropDownList()
                .Name("code1")
                .DataTextField("Name")
                .DataValueField("Code")
                .HtmlAttributes(new { style = "height:25px;width: 158px;font-weight: normal" })
                .DataSource(source => { source.Read(read => { read.Action("GetCmyRecordsdrop", "RuleDefinition"); }).ServerFiltering(true); }))
    </div>
    <div class="form-group">
        <label class="col-sm-3">Comparison Criteria</label>
        @(Html.Kendo().DropDownList()
                 .Name("code2")
                 .DataTextField("Name")
                 .DataValueField("Code")
                 .HtmlAttributes(new { style = "height:25px;width: 158px;font-weight: normal" })
                 .DataSource(source => { source.Read(read => { read.Action("Getextracdrop", "RuleDefinition"); }).ServerFiltering(true); }))
    </div>

</form>



